---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { getFeaturedReviews } from '~/utils/reviews';
import wideRoom from '~/assets/images/wide_treatment_room.jpg';

const metadata = {
  title: 'Dra. Eugenia Vila - Clínica Dental en Málaga',
  description:
    'Clínica dental en El Palo, Málaga. Más de 30 años de experiencia en implantes dentales, cirugía oral, alineadores y odontología estética. Premiada Dentista del Año por Dental Art Implant Clinics (Londres, Reino Unido).',
  ignoreTitleTemplate: true,
};

const featuredReviews = getFeaturedReviews(6);
const testimonials = featuredReviews.map((review) => ({
  testimonial: review.text_es,
  name: review.name,
  job: review.clinic === 'malaga' ? 'Málaga' : review.clinic === 'balham' ? 'Londres (Balham)' : 'Londres (Finchley)',
  image: {
    src: review.avatar.startsWith('http') ? review.avatar : undefined,
    alt: review.name,
  },
  rating: review.rating,
  date: review.date,
  source: review.source,
  link: review.link,
}));
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'WhatsApp',
        href: 'https://wa.me/34679975580?text=Hola,%20me%20gustaría%20reservar%20una%20cita',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
      {
        text: 'Ubicación',
        href: 'https://www.google.com/maps/place/Clinica+Dental+Dra.+Eugenia+Vila/@36.7212568,-4.3611691,16z/data=!3m1!4b1!4m6!3m5!1s0xd7259d6897597c3:0x48544afb3aaf06a4!8m2!3d36.7212568!4d-4.3611691!16s%2Fg%2F11xnngghh?entry=tts&g_ep=EgoyMDI1MTEwNC4xIPu8ASoASAFQAw%3D%3D&skid=c1c51f43-632e-4bfc-bcb0-bea57f7b8390',
        target: '_blank',
        icon: 'tabler:map-pin',
      },
    ]}
    image={{ src: wideRoom, alt: 'Sala de tratamiento de Dra. Eugenia Vila' }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Sonrisas Perfectas</span> con más de
      <span class="text-accent dark:text-white">30 Años de Experiencia</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="block mb-2">
        <span class="font-bold">Doctora en Medicina y Odontología</span>, <span class="font-bold"
          >Máster en Implantes y Estética</span
        >
      </span>
      <span class="block mb-2">
        Premiada <span class="font-bold">Dentista del Año 2024</span>, Dental Art Implant Clinics
      </span>
      <span class="block"> Clínica Dental en El Palo, Málaga. </span>
    </Fragment>
  </Hero>

  <!-- Services Preview -->
  <Features
    id="servicios"
    tagline="Nuestros Servicios"
    title="Tratamientos Dentales Especializados"
    subtitle="Con tecnología de vanguardia y materiales de la más alta calidad"
    items={[
      {
        title: 'Implantes Dentales',
        description:
          'Rehabilitación completa con implantes. Especialista en colocación de implantes, injertos óseos y elevaciones de seno maxilar.',
        icon: 'tabler:dental',
      },
      {
        title: 'Cirugía Oral',
        description:
          'Extracciones complejas, muelas del juicio y procedimientos quirúrgicos avanzados. Atención especializada con más de 30 años de experiencia.',
        icon: 'tabler:medical-cross',
      },
      {
        title: 'Alineadores',
        description:
          'Tratamiento con alineadores transparentes para corrección de sonrisa sin brackets tradicionales. Resultados predecibles y cómodos.',
        icon: 'tabler:dental-off',
      },
      {
        title: 'Odontología Estética',
        description:
          'Carillas de porcelana, bonding y diseño de sonrisa personalizado. Resultados naturales y hermosos que transforman tu sonrisa.',
        icon: 'tabler:sparkles',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white dark:bg-slate-900"></div>
    </Fragment>
  </Features>

  <!-- Stats Section -->
  <Stats
    stats={[
      { title: 'Años de Experiencia', amount: '30+' },
      { title: 'Pacientes Satisfechos', amount: '20K+' },
      { title: 'Implantes Colocados', amount: '3K+' },
      { title: 'Reseñas 5 Estrellas', amount: '60+' },
    ]}
  />

  <!-- Testimonials Section -->
  <Testimonials
    title="Lo Que Dicen Nuestros Pacientes"
    subtitle="Más de 60 reseñas de 5 estrellas en Google y Trustpilot"
    testimonials={testimonials}
    language="es"
    callToAction={{
      text: 'Ver Todas las Reseñas',
      href: '/resenas',
    }}
  />

  <!-- Review Request Section -->
  <section class="px-4 py-16 mx-auto max-w-4xl sm:px-6 lg:px-8">
    <div
      class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-slate-800 dark:to-slate-900 rounded-lg p-8 md:p-12 text-center border border-blue-100 dark:border-slate-700"
    >
      <div class="mb-6">
        <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
            ></path>
          </svg>
        </div>
        <h2 class="text-3xl font-bold mb-4">¿Has Sido Paciente?</h2>
        <p class="text-lg text-muted dark:text-slate-300 mb-6 max-w-2xl mx-auto">
          Si has sido paciente en nuestra clínica, ¡nos encantaría conocer tu experiencia! Tus comentarios nos ayudan a
          seguir brindando una atención excepcional y ayudan a otros pacientes a tomar decisiones informadas.
        </p>
      </div>
      <a
        href="https://g.page/r/CaQGrzr7SlRIEAE/review"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors duration-200 shadow-lg hover:shadow-xl"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
            fill="#4285F4"></path>
          <path
            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
            fill="#34A853"></path>
          <path
            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
            fill="#FBBC05"></path>
          <path
            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
            fill="#EA4335"></path>
        </svg>
        Dejar una Reseña en Google
      </a>
    </div>
  </section>

  <!-- Call to Action -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Reservar por WhatsApp',
        href: 'https://wa.me/34679975580?text=Hola,%20me%20gustaría%20reservar%20una%20cita',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
    ]}
  >
    <Fragment slot="title">¿Lista/o para Tu Mejor Sonrisa?</Fragment>

    <Fragment slot="subtitle">
      Contáctanos por WhatsApp para reservar tu consulta.<br />
      <span class="text-sm text-muted">
        Clínica abierta fines de semana selectos cuando la Dra. Vila está en Málaga.
      </span>
    </Fragment>
  </CallToAction>
</Layout>
